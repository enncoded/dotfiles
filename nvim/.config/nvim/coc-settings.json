{
    "python.pythonPath":"~/.pyenv/shims/python",
    "python.jediEnabled": false,
    "javascript.format.enabled": true,
    "coc.preferences.snippets.enable": true,
    "coc.source.ultisnips.enable": true,
    "coc.preferences.formatOnSaveFiletypes": ["cpp", "c", "python", "javascript"],
    "list.normalMappings": {
        "t": "action:tabe",
        "v": "action:vsplit",
        "s": "action:split",
        "d": "expr:GetDeleteAction"
    },
    "list.insertMappings": {
        "<C-t>": "action:tabe",
        "<C-w>": "command:wincmd k"
    },
    // diagnostic-languageserver
    "diagnostic-languageserver.filetypes": {
        "markdown": [ "write-good", "markdownlint" ],
        "sh": "shellcheck",
        "rust": "rls",
        "python": "pyls"
    },
    "diagnostic-languageserver.formatFiletypes": {
        "python": "flake8"
    }
}
