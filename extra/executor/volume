#!/bin/bash

# 'volume -i' = with icon, 'volume' = text only

statusLine=$(amixer get Master | tail -n 1)
status=$(echo "${statusLine}" | grep -wo "on")
volume=$(echo "${statusLine}" | awk -F ' ' '{print $5}' | tr -d '[]%')

if [[ "${status}" == "on" ]]; then
	if  [[ $1 = "-i" ]]; then
    echo "ðŸ”Š${volume}%"
	else
    echo "${volume}%"
	fi
else
	if  [[ $1 = "-i" ]]; then
	echo "ðŸ”‡off"
	else
    echo "off"
	fi
fi

