[colors]
background=${xrdb:background:#ffffff00a}
foreground=${xrdb:foreground:#ffffff}

red=${xrdb:color1:#ffffff}
bred=${xrdb:color9:#ffffff}

grn=${xrdb:color2:#ffffff}
bgrn=${xrdb:color10:#ffffff}

ylw=${xrdb:color3:#ffffff}
bylw=${xrdb:color11:#ffffff}

blu=${xrdb:color4:#ffffff}
bblu=${xrdb:color12:#ffffff}

mag=${xrdb:color5:#ffffff}
bmag=${xrdb:color13:#ffffff}

cyn=${xrdb:color6:#ffffff}
bcyn=${xrdb:color14:#ffffff}

black=${xrdb:color0:#ffffff}
grey=${xrdb:color8:#ffffff}

white=#EAEAED

; Define colors for each module
; Easier to change here for each module
obbg=${self.red}
obibg=${self.foreground}
cpubg=${self.red}
winbg=${self.ylw}
netbg=${self.ylw}
volbg=${self.bmag}
batbg=${self.mag}
malbg=${self.red}

obfg=${self.foreground}
obifg=${self.background}
cpufg=${self.foreground}
winfg=${self.background}
netfg=${self.background}
volfg=${self.white}
batfg=${self.foreground}
malfg=${self.foreground}

;--------------------------------------------
; bars                                      ; 
;--------------------------------------------

[bar/base]
dpi=192
width=100%
height=20 
offset-x=0 
offset-y=0 
foreground=${colors.foreground} 
background=${colors.background}
border-top-size=7
border-top-color= ${colors.background}
border-bottom-size=7
border-bottom-color= ${colors.background}
spacing=0 
padding-left=1 
padding-right=0 
module-margin-left=0 
module-margin-right=0  
;font-N=<fontconfig pattern>;<vertical offset>
font-0=Wuncon Siji:size=4;2
font-1=UW ttyp0:pixelsize=10;2
font-2=Sazanami\-Hanazono Mincho:pixelsize=5;2
modules-left=openbox padding xwindow 
modules-center=padding mpd padding 
modules-right=padding volume padding date padding powermenu padding
monitor = HDMI-0

[bar/systray]
# As small as possible, polybar will resize it when items get added
width = 1

# Whatever fits your needs
height = 28

# Bottom left to imitate gnome-shells systray
bottom = false
offset-x=-205
offset-y=3

# REQUIRED for us to be able to move the window
override-redirect = true

modules-right = placeholder

tray-position = right
tray-maxsize = 18
tray-padding = 3
tray-transparent = false
background = ${colors.background}
#monitor = HDMI-0

;--------------------------------------------
; modules                                   ;
;--------------------------------------------

[module/xwindow]
y-offset=10
type=internal/xwindow
;label=%title:0:120:...%
label=%title%
label-maxlen=50
label-padding=1 
label-foreground=${colors.winfg} 
label-background=${colors.winbg}

[module/date]
type=internal/date
interval=1.0
date=%a %b %d, 
time=%H:%M:%S
time-alt=%H:%M:%S
label=%date% %time%
format=<label>
format-padding=0 
label-background=${colors.foreground}
label-foreground=${colors.black}
label-padding= 1 

[module/volume]
type=internal/alsa
master-soundcard=hw:2
speaker-soundcard=hw:1
headphone-soundcard=hw:1
master-mixer=Master
mapped=true
format-volume =<label-volume>
format-muted =<label-muted>
ramp-volume-background=${colors.volbg}
ramp-volume-foreground=${colors.volfg}
ramp-volume-padding=1
label-volume= %percentage%
label-volume-background=${colors.volbg}
label-volume-foreground=${colors.volfg}
label-volume-padding=1
label-muted= 0
label-muted-foreground=${colors.volfg} 
label-muted-background=${colors.volbg}
label-muted-padding=1
format-volume-padding=0 
format-muted-padding=0 
ramp-headphones-0= format-volume =<label-volume>

[module/cpu]
type=internal/cpu
interval=0.5
format=<label> 
label= %percentage%%
label-background=${colors.cpubg}
label-foreground=${colors.cpufg}
label-padding=1

;[module/network]
;type=internal/network
;interface=enp4s0
;interval=3.0
;format-connected=<label-connected>
;format-connected-underline=#9f78e1
;label-connected= %ifname%
;label-connected-background=${colors.netbg}
;label-connected-foreground=${colors.netfg}
;label-connected-padding=1
;ramp-signal-background=${colors.netbg}
;ramp-connected-foreground=${colors.netfg}
;ramp-signal-padding=1
;format-disconnected= <label-disconnected>
;label-disconnected-background=${colors.netbg}
;label-disconnected-padding=1
;label-disconnected=DISCONNECTED
;ramp-signal-foreground=${colors.netfg}

[module/padding]
type=custom/text
content=| 
content-foreground=${colors.background}
content-background=${colors.background}

[module/openbox]
type=internal/xworkspaces
pin-workspaces=true
enable-click=true
enable-scroll=false
format=<label-state>
label-monitor=%name%
label-active =%icon%%name%
label-active-foreground =${colors.obfg} 
label-active-background =${colors.obbg} 
label-active-underline=#fba922
label-active-padding=1
label-occupied =%name%
label-occupied-background=${colors.obbg}
label-occupied-padding=1
label-urgent=%index%
label-urgent-foreground=#000000
label-urgent-background=#bd2c40
label-urgent-underline=#9b0a20
label-empty =%name%
label-empty-padding=1
label-empty-background=${colors.obibg}
label-empty-foreground=${colors.obifg}

[module/mpd]
type=internal/mpd
host=127.0.0.1
port=6600
interval=2
label-song= %artist% - %title%
label-offline = mpd is offline

[module/powermenu]
type = custom/menu
;format-spacing = 1
label-open = 
label-open-foreground = ${colors.obfg}
label-close =  cancel
label-close-foreground = ${colors.obifg}
label-separator = |
label-separator-foreground = ${colors.background}

menu-0-0 = logoff
menu-0-0-exec = openbox --exit
menu-0-1 = reboot
menu-0-1-exec = systemctl reboot
menu-0-2 = power off
menu-0-2-exec = systemctl poweroff

[module/placeholder]
# Just a dummy module as polybar always requires at least one amodule
type = custom/script
width = 1

;menu-1-0 = cancel
;menu-1-0-exec = menu-open-0
;menu-1-1 = logoff
;menu-1-1-exec = openbox --exit
;menu-2-0 = cancel
;menu-2-0-exec = menu-open-0
;menu-2-1 = reboot
;menu-2-1-exec = systemctl reboot
;menu-3-0 = cancel
;menu-3-0-exec = menu-open-0
;menu-3-1 = power off
;menu-3-1-exec = systemctl poweroff

