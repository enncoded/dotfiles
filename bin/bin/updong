#!/usr/bin/env bash

# $1 = filepath
# $2 = location on server

source ~/websites

scp -i "~/.ssh/$SSHKEY" "$1" "gamer@$WEBSITE:$2"

filename=$(basename -- "$1")
echo "filename: $filename"

url="$WEBSITES/$2/$filename"

echo "url: $url"
echo -n "$url" | xclip -selection clipboard
notify-send "$url"

exit 0
