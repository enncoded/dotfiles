#!/usr/bin/env bash

# $1 = filepath
# $2 = location on server

source /home/aquamarine/websites

scp -i "/home/aquamarine/.ssh/$SSHKEY" "$1" "uploader@$WEBSITE:$2"

filename=$(basename -- "$1")
echo "filename: $filename"

url="$WEBSITES/$2/$filename"

echo "url: $url"
echo -n "$url" | xclip -selection clipboard
notify-send "$url"

exit 0
