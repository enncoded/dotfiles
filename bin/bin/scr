#!/usr/bin/env bash

origpath="/tmp/scr.png"
arg=0

if [[ "$1" = "-s" ]]; then
    maim -s -u $origpath
    arg=$?
elif [[ "$1" = "-w" ]]; then
    maim -u $origpath
    arg=$?
else
    exit 1
fi

if [ $arg -eq 0 ]; then
    filename="$(date +%s).png"
    filepath="/home/aquamarine/Screenshots/$filename"
    mv "$origpath" "$filepath"
    updong "$filepath" images
else
    notify-send Screenshot failed.
    exit 1
fi

exit 0
